<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="6">
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:text="Enter numbers for numering"
        android:textSize="12pt" />


    <Button
        android:id="@+id/btn_delete"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_row="1"
        android:layout_column="0"
        android:onClick="OnDeleteButtonClick"
        android:text="A/C" />

    <Button
        android:id="@+id/btn_change"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_row="1"
        android:layout_column="1"
        android:onClick="OnChangeButtonClick"
        android:text="+-" />

    <Button
        android:id="@+id/btn_divide"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_row="1"
        android:layout_column="3"
        android:onClick="OnDivideButtonClick"
        android:text="/" />


    <Button
        android:id="@+id/btn_7"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_row="2"
        android:layout_column="0"
        android:onClick="On7ButtonClick"
        android:text="7" />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_row="2"
        android:layout_column="1"
        android:onClick="On8ButtonClick"
        android:text="8" />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_row="2"
        android:layout_column="2"
        android:onClick="On9ButtonClick"
        android:text="9" />

    <Button
        android:id="@+id/btn_multiply"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_row="2"
        android:layout_column="3"
        android:onClick="OnMultiplyButtonClick"
        android:text="*" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_row="3"
        android:layout_column="0"
        android:onClick="On4ButtonClick"
        android:text="4" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_row="3"
        android:layout_column="1"
        android:onClick="On5ButtonClick"
        android:text="5" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_row="3"
        android:layout_column="2"
        android:onClick="On6ButtonClick"
        android:text="6" />

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_row="3"
        android:layout_column="3"
        android:onClick="OnMultiplyButtonClick"
        android:text="-" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_row="4"
        android:layout_column="0"
        android:onClick="On1ButtonClick"
        android:text="1" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_row="4"
        android:layout_column="1"
        android:onClick="On2ButtonClick"
        android:text="2" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_row="4"
        android:layout_column="2"
        android:onClick="On3ButtonClick"
        android:text="3" />

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_row="4"
        android:layout_column="3"
        android:onClick="OnPlusButtonClick"
        android:text="+" />

    <Button
        android:id="@+id/btn_result"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_row="5"
        android:layout_column="3"
        android:onClick="OnResultButtonClick"
        android:text="=" />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:onClick="OnResultButtonClick"
        android:text="0" />
</GridLayout>